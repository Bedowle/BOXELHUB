// prisma/schema.prisma
datasource db {
  provider = "postgresql" // Usa Postgres en producci√≥n
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  createdAt DateTime @default(now())
}